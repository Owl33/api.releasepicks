{
  "version": 2,

  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.ts",
      "methods": ["GET", "POST", "PUT", "PATCH", "OPTIONS", "DELETE"],
      "headers": {
        "Access-Control-Allow-Origin": "https://game-calendar-two.vercel.app"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/pipeline/cron/steam-maintenance",
      "schedule": "0 17 * * *"
    }
  ]


}
